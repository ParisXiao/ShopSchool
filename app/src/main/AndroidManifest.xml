<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.liuzhi.eschool">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:name=".AppLiaction"
            android:allowBackup="true"
            android:icon="@drawable/ic_logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_round_radis_logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.Main"
            tools:replace="android:icon"
            >
        <meta-data
                android:name="android.max_aspect"
                android:value="2.1"
                tools:replace="android:value"
                />
        <provider
                android:name="android.support.v4.content.FileProvider"
                android:authorities="${applicationId}.fileProvider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/provider_paths" />
        </provider>
        <activity
                android:name=".view.activity.LoginActivity"
                android:windowSoftInputMode="stateHidden|adjustPan"
                android:screenOrientation="portrait"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
        android:windowSoftInputMode="stateHidden|adjustPan"
        android:screenOrientation="portrait"
        />
        <!--<activity-->
                <!--android:name=".view.activity.LoginActivity"-->
                <!--android:windowSoftInputMode="stateHidden|adjustPan"-->
                <!--android:screenOrientation="portrait"-->
                <!--/>-->
        <activity
                android:name=".view.activity.RegisterActivity"
                android:windowSoftInputMode="stateHidden|adjustPan"
                android:screenOrientation="portrait"
                />
        <activity
                android:name=".view.activity.ForgetPasswordActivity"
                android:windowSoftInputMode="stateHidden|adjustPan"
                android:screenOrientation="portrait"
                />
        <activity
                android:name=".view.activity.ClassDetailActivity"
                android:windowSoftInputMode="stateHidden|adjustPan"
                android:screenOrientation="portrait"
                />
        <activity
                android:name=".view.activity.ProjectListActivity"
                android:windowSoftInputMode="stateHidden|adjustPan"
                android:screenOrientation="portrait"
                />
        <activity
                android:name=".view.activity.ProjectDetailActivity"
                android:windowSoftInputMode="stateHidden|adjustPan"
                android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.MineListActivity"
                  android:windowSoftInputMode="stateHidden|adjustPan"
                  android:screenOrientation="portrait"
                />
        <activity android:name=".view.activity.UserInfoSetActivity"
                  android:windowSoftInputMode="stateHidden|adjustPan"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.WebActivity"
                  android:windowSoftInputMode="stateHidden|adjustPan"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.FileDisplayActivity"
                  android:windowSoftInputMode="stateHidden|adjustPan"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.PdfActivity"
                  android:windowSoftInputMode="stateHidden|adjustPan"
                  android:screenOrientation="portrait"/>
        <activity android:name=".view.activity.MyScoreActivity"
                  android:windowSoftInputMode="stateHidden|adjustPan"
                  android:screenOrientation="portrait"/>

    </application>

</manifest>