<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:makeramen="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:id="@+id/ll_main"
              android:background="@color/main_blue_color"
        >

    <include
            android:id="@+id/title"
            layout="@layout/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                >
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/rl_username"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的账号"
                        android:textColor="#4a4a4a"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        />
                <EditText
                        android:id="@+id/set_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="i12345678"
                        android:textColor="#ff4a4a4a"
                        android:textSize="15sp"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cF4F4F4"
                        android:layout_alignParentBottom="true"
                        />
            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/rl_icon"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的头像"
                        android:textColor="#4a4a4a"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        />
                <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/set_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        makeramen:riv_corner_radius="100dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/demo_head"
                        />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cF4F4F4"
                        android:layout_alignParentBottom="true"
                        />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/rl_name"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的姓名"
                        android:textColor="#4a4a4a"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        />
                <EditText
                        android:id="@+id/set_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三枫"
                        android:textColor="#ff4a4a4a"
                        android:textSize="15sp"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cF4F4F4"
                        android:layout_alignParentBottom="true"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的专业"
                        android:textColor="#4a4a4a"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        />
                <TextView
                        android:id="@+id/set_lession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商务管理"
                        android:textColor="#ff4a4a4a"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cF4F4F4"
                        android:layout_alignParentBottom="true"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的班级"
                        android:textColor="#4a4a4a"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        />
                <TextView
                        android:id="@+id/set_class"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商务管理"
                        android:textColor="#ff4a4a4a"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cF4F4F4"
                        android:layout_alignParentBottom="true"
                        />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/rl_phone"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的电话"
                        android:textColor="#4a4a4a"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        />
                <EditText
                        android:id="@+id/set_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商务管理"
                        android:textColor="#ff4a4a4a"
                        android:textSize="15sp"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cF4F4F4"
                        android:layout_alignParentBottom="true"
                        />
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/rl_email"
                    >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的邮箱"
                        android:textColor="#4a4a4a"
                        android:textSize="15sp"
                        android:layout_centerVertical="true"
                        />
                <EditText
                        android:id="@+id/set_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商务管理"
                        android:textColor="#ff4a4a4a"
                        android:textSize="15sp"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/cF4F4F4"
                        android:layout_alignParentBottom="true"
                        />
            </RelativeLayout>\

            <Button
                    android:id="@+id/set_commit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/login_btn"
                    android:text="保存修改"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    />

        </LinearLayout>
    </ScrollView>

</LinearLayout>