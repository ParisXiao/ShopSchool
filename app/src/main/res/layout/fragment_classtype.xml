<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
              android:orientation="vertical"
        >
    <ImageView
            android:id="@+id/class_title_logo"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
    <android.support.design.widget.TabLayout
            android:id="@+id/class_type_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="false"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            app:layout_scrollFlags="scroll"
            app:tabIndicatorColor="#ff2267b1"
            app:tabIndicatorHeight="3dp"
            app:tabMode="scrollable"
            app:tabMinWidth="40dp"
            app:tabSelectedTextColor="#ff2267b1"
            app:tabTextColor="#ff666666"
            >

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/class_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/class_type_tab"
            />
</LinearLayout>