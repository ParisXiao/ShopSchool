<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@drawable/score_bg"
                                             android:fitsSystemWindows="true"
        >
    <include
            android:id="@+id/title"
            layout="@layout/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginTop="70dp"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/score_edit_bg"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓      名："
                android:textColor="#ff454545"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                />
        <EditText
                android:id="@+id/score_edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="8"

                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/score_edit_bg"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班      级："
                android:textColor="#ff454545"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                />
        <EditText
                android:id="@+id/score_edit_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="16"

                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/score_edit_bg"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学      号："
                android:textColor="#ff454545"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                />
        <EditText
                android:id="@+id/score_edit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="16"
                android:inputType="number"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/score_edit_bg"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号："
                android:textColor="#ff454545"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                />
        <EditText
                android:id="@+id/score_edit_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="16"
                android:inputType="number"
                />
    </LinearLayout>
    <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/score_commit_bg"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="66dp"
            android:text="立即查询"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
</LinearLayout>
</android.support.constraint.ConstraintLayout>