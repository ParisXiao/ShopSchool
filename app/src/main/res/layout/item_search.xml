<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="8dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:stateListAnimator="@drawable/lift_on_touch"
                                    app:cardCornerRadius="4dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:cardUseCompatPadding="true"
                                    tools:targetApi="lollipop">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/item_project_img"
                android:layout_width="130dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                />
        <TextView
                android:id="@+id/item_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="仿真实训一"
                android:textColor="#ff454545"
                android:textSize="@dimen/font_size_item_project_name"
                android:layout_toRightOf="@+id/item_project_img"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:maxLength="8"
                android:ellipsize="end"
                />
        <TextView
                android:id="@+id/item_project_xueke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学科：跨境电商"
                android:textColor="#ff787878"
                android:textSize="@dimen/font_size_item_project_xueke"
                android:maxLength="15"
                android:ellipsize="end"
                android:layout_below="@+id/item_project_name"
                android:layout_alignLeft="@+id/item_project_name"
                android:layout_marginTop="10dp"
                />
        <TextView
                android:id="@+id/item_project_time"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.09"
                android:textColor="#ff787878"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/icon_time"
                android:textSize="@dimen/font_size_item_project_xueke"
                android:layout_marginRight="15dp"/>
        <TextView
                android:id="@+id/item_project_msg"
                android:layout_below="@+id/item_project_xueke"
               android:layout_alignLeft="@+id/item_project_xueke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="以信息网络技术为手段，以商品交换为中心的商务活动..."
                android:textColor="#ff787878"
                android:textSize="@dimen/font_size_item_project_name"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>