<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/forget_password_bg"
        >

    <include
            layout="@layout/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            android:background="@drawable/forgetpass_input_bg"
            android:orientation="vertical"
            >
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            <EditText
                    android:id="@+id/input_edit_forget_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_regsiter_username"
                    android:drawableStart="@drawable/icon_regsiter_username"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:hint="请输入学籍号"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:textColor="#ff454545"
                    android:inputType="phone"
                    android:layout_centerVertical="true"
                    android:maxLength="11"
                    android:singleLine="true"
                    />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ff1e9fe7"
                    android:layout_alignParentBottom="true"
                    />
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            <EditText
                    android:id="@+id/input_edit_forget_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_mail"
                    android:drawableStart="@drawable/icon_mail"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:hint="请输入邮箱地址"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    android:textColor="#ff454545"
                    android:inputType="phone"
                    android:layout_centerVertical="true"
                    android:maxLength="11"
                    android:singleLine="true"
                    />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ff1e9fe7"
                    android:layout_alignParentBottom="true"
                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            <EditText
                    android:id="@+id/input_edit_forget_safecode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/forget_send_code"
                    android:drawableLeft="@drawable/icon_forgetpassword_safecode"
                    android:drawableStart="@drawable/icon_forgetpassword_safecode"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:hint="请输入验证码"
                    android:textColor="#ff454545"
                    android:background="@null"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:inputType=""
                    android:maxLength="10"
                    android:singleLine="true"
                    />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ff1e9fe7"
                    android:layout_alignParentBottom="true"
                    />
            <TextView
                    android:id="@+id/forget_send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取验证码"
                    android:textColor="#ff787878"
                    android:textSize="13sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"

                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            <EditText
                    android:id="@+id/input_edit_forget_newpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_forgetpassword_newpassword"
                    android:drawableStart="@drawable/icon_forgetpassword_newpassword"
                    android:drawablePadding="15dp"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:hint="请输入6-12位密码"
                    android:textColor="#ff454545"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ff1e9fe7"
                    android:layout_alignParentBottom="true"
                    />
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline5"
            app:layout_constraintBottom_toBottomOf="parent"
            >
        <Button
                android:id="@+id/forget_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/forgetpass_commit"
                android:text="提交"
                android:textColor="#ffffffff"
                android:textSize="18sp"
                />
    </RelativeLayout>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline4"
            app:layout_constraintGuide_percent="0.24"
            android:orientation="horizontal"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline5"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="horizontal"/>
</android.support.constraint.ConstraintLayout>